#:kivy 2.3.0
<HelloWorldScreen>:
    orientation: 'vertical'
    spacing: 10
    padding: 20

    Label:
        text: "Hello, World!"
        font_size: '40sp'
        color: 0, 0.5, 1, 1  # Blue text

    Button:
        text: "Press Me"
        font_size: '20sp'
        size_hint: 0.5, 0.2
        pos_hint: {'center_x': 0.5}
        on_press: app.on_button_press()

